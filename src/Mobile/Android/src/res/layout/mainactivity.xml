<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.NC.o2ovender.O2OVenderActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/MainTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:text="TextView" />

        <Button
            android:id="@+id/volleyTestBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MainTextView"
            android:layout_marginTop="70dp"
            android:layout_toLeftOf="@+id/MainTextView"
            android:text="VolleyTest" />

        <Button
            android:id="@+id/userInfoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/MainTextView"
            android:layout_alignBottom="@+id/MainTextView"
            android:layout_alignLeft="@+id/volleyTestBtn"
            android:text="UserInfo" />

    </RelativeLayout>

</FrameLayout>

